package sin3bua_strategy_exer6;

import java.util.Scanner;

public class TestandoStrategy {

	public static void main(String[] args) {

		int[] vetor = new int[3];
		
		vetor[0] = 1;
		vetor[1] = 15;
		vetor[2] = 6;
		
		System.out.println(vetor[2]);
		
		Scanner entrada = new Scanner(System.in);
		System.out.println("Insira 'Insert', 'Bubble' ou 'Select' para determinar a ordenação");
		String input = entrada.nextLine();
		
		if(input.equals("Insert")) {
			Formatacao format = new InsertSort();
			Ordem ordem = new Ordem(format);
			ordem.publish(vetor);
		}else if(input.equals("Bubble")) {
			Formatacao format = new BubbleSort();
			Ordem ordem = new Ordem(format);
			ordem.publish(vetor);
		}else if(input.equals("Select")) {
			Formatacao format = new SelectSort();
			Ordem ordem = new Ordem(format);
			ordem.publish(vetor);
		}
		
	}

}
